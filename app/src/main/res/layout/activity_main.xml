<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/GameCanvas">
    <TextView
            android:text="TextView"
            android:layout_height="50dp"
            android:id="@+id/txtScore"
            android:layout_width="0dp" android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:background="@android:color/holo_blue_light"/>
    <ImageButton
            android:layout_width="97dp"
            android:layout_height="97dp" app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/imgMole" android:layout_marginTop="167dp"
            app:layout_constraintTop_toBottomOf="@+id/txtScore" android:layout_marginLeft="144dp"
            android:layout_marginStart="144dp" android:layout_marginEnd="143dp" android:layout_marginRight="143dp"/>
    <Button
            android:text="Start"
            android:layout_width="368dp"
            android:layout_height="50dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            android:id="@+id/btnControl"/>
</android.support.constraint.ConstraintLayout>